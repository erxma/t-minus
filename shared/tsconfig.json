{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* Projects */
    "composite": true,
    "incremental": true,

    /* Modules */
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "rootDir": "./src",

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"]
}
