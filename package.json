{
  "name": "t-minus",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:shared\" -n client,server,shared --prefix-colors auto",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "dev:shared": "npm run dev --workspace=shared -- --preserveWatchOutput"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}